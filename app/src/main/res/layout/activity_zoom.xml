<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ZoomActivity">
    
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintGuide_percent="0.8"
        android:orientation="horizontal"
        android:id="@+id/gl1"/>
    
    <com.zu.camerautil.preview.Camera2PreviewView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gl1"
        android:id="@+id/surface_main"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gl1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/rg"
        android:paddingRight="5dp"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zoom"
            android:id="@+id/rb_zoom"
            android:checked="true"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="crop"
            android:id="@+id/rb_crop"/>
    </RadioGroup>

    <Spinner
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:barrierDirection="top"
        android:id="@+id/spinner_camera"
        android:padding="5dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="10dp"
        />

    <SeekBar
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_progress"
        android:min="1"
        android:max="10"
        android:id="@+id/sb"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/sb"
        app:layout_constraintBottom_toBottomOf="@id/sb"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:textSize="20sp"
        android:text="0.6"
        android:id="@+id/tv_progress"/>

</androidx.constraintlayout.widget.ConstraintLayout>