<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WbActivity">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintGuide_percent="0.8"
        android:orientation="horizontal"
        android:id="@+id/gl1"/>



    <com.zu.camerautil.preview.Camera2PreviewView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gl1"
        android:id="@+id/surface_main"/>

    <com.zu.camerautil.view.CameraSelectorView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/camera_selector"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gl1"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"
            android:id="@+id/gl2"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/gl2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:id="@+id/sp_wb_mode"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/sp_wb_mode"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_analyze_wb"
            android:layout_marginLeft="20dp"
            android:text="输入值：123"
            android:id="@+id/tv_input_wb"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/sp_wb_mode"
            app:layout_constraintBottom_toTopOf="@id/gl2"
            app:layout_constraintTop_toBottomOf="@id/tv_input_wb"
            android:layout_marginLeft="20dp"
            android:text="解析值：456"
            android:id="@+id/tv_analyze_wb"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/sb_kelvin"
            app:layout_constraintBottom_toBottomOf="@id/sb_kelvin"
            android:id="@+id/label_kelvin"
            android:text="色温:"/>

        <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/gl2"
            app:layout_constraintBottom_toTopOf="@id/sb_green_red"
            app:layout_constraintLeft_toRightOf="@id/tv_min_kelvin"
            app:layout_constraintRight_toLeftOf="@id/tv_max_kelvin"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/sb_kelvin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/label_kelvin"
            app:layout_constraintTop_toTopOf="@id/sb_kelvin"
            app:layout_constraintBottom_toBottomOf="@id/sb_kelvin"
            android:text="2000"
            android:id="@+id/tv_min_kelvin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/sb_kelvin"
            app:layout_constraintBottom_toBottomOf="@id/sb_kelvin"
            android:text="10000"
            android:id="@+id/tv_max_kelvin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/sb_green_red"
            app:layout_constraintBottom_toBottomOf="@id/sb_green_red"
            android:id="@+id/label_green_red"
            android:text="绿品:"/>

        <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sb_kelvin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_min_green_red"
            app:layout_constraintRight_toLeftOf="@id/tv_max_green_red"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/sb_green_red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/label_green_red"
            app:layout_constraintTop_toTopOf="@id/sb_green_red"
            app:layout_constraintBottom_toBottomOf="@id/sb_green_red"
            android:text="2000"
            android:id="@+id/tv_min_green_red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/sb_green_red"
            app:layout_constraintBottom_toBottomOf="@id/sb_green_red"
            android:text="10000"
            android:id="@+id/tv_max_green_red"/>
    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>